<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="stocks">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="stock"/>
      </xs:sequence>
      <xs:attribute name="timestamp" use="required" type="xs:unsignedLong"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="stock">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="company"/>
        <xs:element ref="cotation"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="company">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="name"/>
        <xs:element ref="address"/>
        <xs:element ref="website"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="name" type="xs:NCName"/>
  <xs:element name="address" type="xs:NCName"/>
  <xs:element name="website" type="xs:anyURI"/>
  <xs:element name="cotation">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="lastCotation"/>
        <xs:element ref="time"/>
        <xs:element ref="variation"/>
        <xs:element ref="quantity"/>
        <xs:element ref="maximum"/>
        <xs:element ref="minimum"/>
        <xs:element ref="purchase"/>
        <xs:element ref="sell"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="lastCotation" type="xs:decimal"/>
  <xs:element name="time" type="xs:decimal"/>
  <xs:element name="variation" type="xs:decimal"/>
  <xs:element name="quantity" type="xs:unsignedLong"/>
  <xs:element name="maximum" type="xs:decimal"/>
  <xs:element name="minimum" type="xs:decimal"/>
  <xs:element name="purchase" type="xs:decimal"/>
  <xs:element name="sell" type="xs:decimal"/>
</xs:schema>
