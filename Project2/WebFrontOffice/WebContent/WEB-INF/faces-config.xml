<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

	<lifecycle>
		<phase-listener>eai.msejdf.session.SessionPhaseListener</phase-listener>
	</lifecycle>

	<navigation-rule>
		<from-view-id>/Login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{securityBeanW.checkUserCredentials}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/UserHome.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{securityBeanW.checkUserCredentials}</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/Login.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>message</name>
					<value>WrongUserPasswordError</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>Register</from-outcome>
			<to-view-id>/UserInfo.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/UserInfo.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userBeanW.updateUser}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/UserHome.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBeanW.updateUser}</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/UserInfo.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>message</name>
					<value>WrongUserInfoError</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>Cancel</from-outcome>
			<to-view-id>/UserHome.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/UserHome.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>CompanyInfo</from-outcome>
			<to-view-id>/CompanyInfo.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBeanW.subscriptionChangeAction(company)}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/UserHome.xhtml</to-view-id>
			<redirect>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBeanW.subscriptionChangeAction(company)}</from-action>
			<from-outcome>false</from-outcome>
			<!-- TODO: We should show an error page -->
			<to-view-id>/UserHome.xhtml</to-view-id>
			<redirect>
			</redirect>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/Companies.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>CompanyInfo</from-outcome>
			<to-view-id>/CompanyInfo.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBeanW.subscriptionChangeAction(company)}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/Companies.xhtml</to-view-id>
			<redirect>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBeanW.subscriptionChangeAction(company)}</from-action>
			<from-outcome>false</from-outcome>
			<!-- TODO: We should show an error page -->
			<to-view-id>/Companies.xhtml</to-view-id>
			<redirect>
			</redirect>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>SessionTimedOut</from-outcome>
			<to-view-id>/Login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/AddBankTeller.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userBeanW.addBankTeller}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/BankTeller.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBeanW.addBankTeller}</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/AddBankTeller.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>message</name>
					<value>WrongBankTellerInfoError</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>Cancel</from-outcome>
			<to-view-id>/BankTeller.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>message</name>
					<value>Cancel</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/BankTeller.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userBeanW.addBankTeller}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/AddBankTeller.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>message</name>
					<value>WrongBankTellerInfoError</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBeanW.addBankTeller}</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/AddBankTeller.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBeanW.subscriptionChangeActionBankTeller(bankTeller)}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/BankTeller.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>message</name>
					<value>WrongBankTellerInfoError</value>
				</view-param>
			</redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBeanW.subscriptionChangeActionBankTeller(bankTeller)}</from-action>
			<from-outcome>false</from-outcome>
			<to-view-id>/BankTeller.xhtml</to-view-id>
			<redirect>
				<view-param>
					<name>message</name>
					<value>WrongBankTellerInfoError</value>
				</view-param>
			</redirect>
		</navigation-case>
	</navigation-rule>

</faces-config>
