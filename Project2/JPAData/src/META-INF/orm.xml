<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
	<persistence-unit-metadata>
   		<!--  Override annotations -->
        <xml-mapping-metadata-complete/>
    </persistence-unit-metadata>
	
    <package>eai.msejdf.persistence</package>
    
	<mapped-superclass class="eai.msejdf.data.Company">
	    <attributes>
		    <basic name="name" optional="false">
	        </basic>
		    <basic name="address">
	        </basic>
		    <basic name="website">
	        </basic>
	    </attributes>	
	</mapped-superclass>	
    
    <entity class="User">
		<attributes>
		     <id name="id">
		         <column name="id"/>
		         <generated-value strategy="IDENTITY"/>
		     </id>   
		     <basic name="username">
            	<column name="username" unique="true" nullable="false"/>
        	</basic>		     
		     <basic name="password">
            	<column name="password" nullable="false"/>
        	</basic>		     		          	
		     <basic name="name">
            	<column name="name" nullable="false"/>
        	</basic>		     		          	
		   	<many-to-one name="bankTeller" fetch="LAZY" target-entity="BankTeller">
        	</many-to-one>	        
	        <one-to-one name="address" fetch="LAZY" target-entity="Address">
	        </one-to-one>
	        <many-to-many name="subscribedCompanies" fetch="LAZY" target-entity="Company">
	        </many-to-many>
		</attributes>        
    </entity>
    <entity class="Address" access="PROPERTY" metadata-complete="true">
		<attributes>
		     <id name="id">
		         <column name="id"/>
		         <generated-value strategy="IDENTITY"/>
		     </id>        	
		</attributes>
    </entity>
    <entity class="BankTeller" access="PROPERTY" metadata-complete="true">
		<attributes>
		     <id name="id">
		         <column name="id"/>
		         <generated-value strategy="IDENTITY"/>
		     </id>        	
	        <one-to-one name="address" fetch="LAZY" target-entity="Address">
	        </one-to-one>
		</attributes>    
    </entity>
	<entity class="BackOfficeUser" access="PROPERTY" metadata-complete="true">
		<attributes>
		     <id name="id">
		         <column name="id"/>
		         <generated-value strategy="IDENTITY"/>
		     </id>        	
		     <basic name="username">
            	<column name="username" unique="true" nullable="false"/>
        	</basic>		     
		     <basic name="password">
            	<column name="password" nullable="false"/>
        	</basic>		     
		</attributes>
	</entity>
	<entity class="Company" access="FIELD">
		<attributes>
			<id name="id">
		         <column name="id"/>
		         <generated-value strategy="IDENTITY"/>
			</id>
	        <one-to-one name="addressNew" fetch="LAZY" target-entity="Address">
	        </one-to-one>	
	        <many-to-many name="subscribedUsers" fetch="LAZY" target-entity="User">
	        </many-to-many>        	
		</attributes>
	</entity>
	
</entity-mappings>
